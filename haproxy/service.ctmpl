frontend {{env "SERVICE_NAME"}}-fe
    bind *:80
    bind *:443
    option http-server-close
    acl url_{{env "SERVICE_NAME"}} path_beg {{env "SERVICE_PATH"}}
    use_backend {{env "SERVICE_NAME"}}-be if url_{{env "SERVICE_NAME"}}

backend {{env "SERVICE_NAME"}}-be
    {{range service "{{env "SERVICE_NAME"}}" "any"}}
    server {{.Node}}_{{.Port}} {{.Address}}:{{.Port}} check
    {{end}}
